	<link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/cover/" />

	<link href="styles/bootstrap.min.css" rel="stylesheet" />

	<style>
		.bd-placeholder-img {
			font-size: 1.125rem;
			text-anchor: middle;
			-webkit-user-select: none;
			-moz-user-select: none;
			user-select: none;
		}

		@media (min-width: 768px) {
			.bd-placeholder-img-lg {
				font-size: 3.5rem;
			}
		}

		.b-example-divider {
			height: 3rem;
			background-color: rgba(0, 0, 0, 0.1);
			border: solid rgba(0, 0, 0, 0.15);
			border-width: 1px 0;
			box-shadow: inset 0 0.5em 1.5em rgba(0, 0, 0, 0.1),
				inset 0 0.125em 0.5em rgba(0, 0, 0, 0.15);
		}

		.b-example-vr {
			flex-shrink: 0;
			width: 1.5rem;
			height: 100vh;
		}

		.bi {
			vertical-align: -0.125em;
			fill: currentColor;
		}

		.nav-scroller {
			position: relative;
			z-index: 2;
			height: 2.75rem;
			overflow-y: hidden;
		}

		.nav-scroller .nav {
			display: flex;
			flex-wrap: nowrap;
			padding-bottom: 1rem;
			margin-top: -1px;
			overflow-x: auto;
			text-align: center;
			white-space: nowrap;
			-webkit-overflow-scrolling: touch;
		}

		.blurredBG {
			width: 20%;
			height: 250px;
			display: inline-block;
			background-size: cover;
			border-radius: 20px;
			box-shadow: 0 0 20px #000;
			position: relative;
			overflow: hidden;
			color: white;
			margin: 15px;
		}

		.blurredBG .parentBG {
			position: absolute;
			width: 100%;
			bottom: 0;
			box-shadow: 0 0 8px #000;
			z-index: 1;
			opacity: 1;
		}

		.blurredBG .content {
			/* background-color: rgba(255, 255, 255, 0.5); */
			font-family: arial;
		}

		.blurredBG .bG {
			position: absolute;
			width: 100%;
			height: 250px;
			bottom: 0;
			background-size: cover;
			z-index: -1;
			filter: blur(3px);
		}

		.parentBG {
			height: 100%;
			font-size: 2rem;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			align-items: stretch;
		}

		.parentBG:hover {
			color: orange;
			transition: transform 0.8s;
		}

		.blurredBG:hover {
			transform: scale(1.1);
			transition: transform 0.6s;
		}

		.seta {
			display: flex;
			justify-content: end;
			padding: 0 3rem;
		}
	</style>

	<!-- Custom styles for this template -->
	<link href="styles/cover.css" rel="stylesheet" />
</head>

<body class="text-bg-dark h-100">
	<div class="d-flex flex-column justify-content-between h-100">
		<div class="d-flex justify-content-center">
			<header>
				<a href="/" class="d-flex justify-content-center">
					<img src="images/Compass.png" alt="" style="width: 11rem" />
				</a>
				<%if (hasUsers=='true' ) { %>
					<a href="/logout" class="text-bg-dark d-flex justify-content-center"
						style="text-decoration: none; font-size: 2rem;">Logout</a>
					<% } else{%>
						<a class="text-bg-dark d-flex justify-content-center" href="/login"
							style="text-decoration: none; font-size: 2rem;">Login</a>
						<% } %>
			</header>
		</div>
		<div class="d-flex flex-wrap justify-content-center">
			<% for(var i=0; i<vulnType.length; i++) {%>
				<a href="<%- vulnType[i].link %>" style="
						background-image: url(images/programcao.jpg);
					" class="blurredBG" target="_blank">
					<div class="parentBG">
						<div class="d-flex flex-column h-100 justify-content-between">
							<div class="d-flex justify-content-start" style="padding: 1rem 3rem 0 3rem">
								<p><%- vulnType[i].titulo %></p>
							</div>
							<div class="seta">
								<p>></p>
							</div>
						</div>
						<div class="bG" style="background-color: rgb(33 37 41 / 85%)">
							<!--same background-->
						</div>
					</div>
				</a>
				<% } %>
		</div>
		<footer class="d-flex justify-content-center">
			<p class="text-light">&copy; Ningu√©m deveria copiar isso.</p>
		</footer>
	</div>
</body>

